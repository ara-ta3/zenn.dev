{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "automerge": true,
    "timezone": "Asia/Tokyo",
    "separateMajorMinor": false,
    "packageRules": [
        {
            "packagePatterns": ["*"],
            "groupName": "all-packages"
        }
    ],
    "lockFileMaintenance": {
        "enabled": false
    }
}
